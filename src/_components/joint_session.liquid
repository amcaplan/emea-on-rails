{% assign currentTime = "now" | date: "%Y-%m-%d %H:%M %z" %}
{% assign slotTime = time | date: "2021-04-06 %H:%M" %}

<tr class="{% if title == "Break" %}break{% endif %}">
  <th>
    <span class="utc-time">{{ time }}</span>
    <span class="is-hidden local-time" data-time="2021-06-09T{{ time }}:00Z"></span>
  </th>
  <td colspan="5" class="has-text-centered">
    {{ title }}{% if title == "Break" %} ☕️ {% endif %}
    <br/>
    {{currentTime}}
    {% if joinLink %}
      {% if currentTime > "2021-06-09 14:00 +0000" %}
        <a href="https://emeaonrails.sw.work/rooms/Main%20Stage" class="outlink is-hidden" data-hide-until="{{slotTime}}" target="_blank">
          Join <img width="14" height="14" src="https://res.cloudinary.com/caplan/image/upload/f_auto,q_auto,w_28/v1622744727/emea-on-rails-2021/arrow-circle-right.svg" />
        </a>
      {% endif %}
    {% endif %}
  </td>
</tr>
